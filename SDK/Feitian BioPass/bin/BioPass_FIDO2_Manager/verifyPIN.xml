<?xml version="1.0" encoding="UTF-8"?>
<Window size="300,280" mininfo="300,280" maxinfo="300,280" caption="0,0,0,40" sizebox="4,4,4,4"> <!-- 窗口的初始尺寸(宽800，高600)、窗口的最小尺寸(宽600，高400)、标题栏拖拽区域(高32)、可拖拽边框大小(这里添加sizebox后就可以拖拽边框调整大小了) -->
    <Font name="微软雅黑" size="14" bold="false" italic="false" default="true" />
	<Font name="Times New Roman" size="13" bold="false" italic="false"/>
    <VerticalLayout  bkcolor="#FFFFFFFF" bkcolor2="#FFFFFFFF" bordercolor="#FF1883D7" bordersize="1"> <!-- 整个窗口的背景色 -->
    	<HorizontalLayout height="40" padding="1,1,1,1" bkcolor="#FFFFFFFF" bordercolor="#FF1883D7">
    		<Label text="Verify PIN" padding="10,0,0,0" width="120" height="40" valign="center"/>
			<Control width="120"/>
			<Button name="closebtn" tooltip="Close" width="48" height="32" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="center" normalimage=" file=&apos;Close_Active.png&apos; " hotimage=" file=&apos;Close_MouseOver.png&apos; " pushedimage=" file=&apos;Close_Click.png&apos; " />
        </HorizontalLayout>
        
		<Control height="20"/>
		<Label text="Verify PIN for BioPass FIDO2" height="40" padding="20,0,0,0" valign="center"/>
		<Control height="10"/>
        <HorizontalLayout height="48">
			<Label width="48" height="48" padding="20,0,0,0" bkimage=" file=&apos;PIN_Button.png&apos; "/>
            <Edit name="edit_pin" width="200" height="30" padding="8,9,0,0" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" focusbordercolor="#FF0078D7" bordersize="1" valign="center" tooltip="Input your PIN" password="true"/>
        </HorizontalLayout>
		
		<Label name="label_status" height="30" textcolor="#FFFF0000" align="center" valign="center"/>
  		<Control height="35"/>
        <HorizontalLayout>
        	<Button name="btn_ok" text="OK" width="120" height="30" padding="155,0,0,0" bkcolor="#FFCCCCCC" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="center" bordersize="1" bordercolor="#FFD7D7D7" focusbordercolor="#FF0078D7"/>
        </HorizontalLayout>        
    </VerticalLayout>
</Window>