<?xml version="1.0" encoding="UTF-8"?>
<Window size="360,360" mininfo="360,360" maxinfo="360,360" caption="0,0,0,40" sizebox="4,4,4,4"> <!-- 窗口的初始尺寸(宽800，高600)、窗口的最小尺寸(宽600，高400)、标题栏拖拽区域(高32)、可拖拽边框大小(这里添加sizebox后就可以拖拽边框调整大小了) -->
    <Font name="微软雅黑" size="14" bold="false" italic="false" default="true" />
	<Font name="微软雅黑" size="12" bold="false" italic="false" />
	<Font name="Times New Roman" size="13" bold="false" italic="false"/>
    <VerticalLayout bkcolor="#FFFFFFFF" bkcolor2="#FFFFFFFF" bordercolor="#FF1883D7" bordersize="1"> <!-- 整个窗口的背景色 -->
        <HorizontalLayout height="40" padding="1,1,1,1" bkcolor="#FFFFFFFF" bordercolor="#FF1883D7" bordersize="0"> <!-- 标题栏背景色 bkcolor、bkcolor2、bkcolor3分别是渐变色的三个值-->
    		<Label text="Add Fingerprint" padding="10,0,0,0" width="120" height="40" valign="center"/>
			<Control width="180"/>
			<Button name="closebtn" tooltip="Close" width="48" height="32" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="center" normalimage=" file=&apos;Close_Active.png&apos; " hotimage=" file=&apos;Close_MouseOver.png&apos; " pushedimage=" file=&apos;Close_Click.png&apos; " />
        </HorizontalLayout>

        <!-- 客户区 -->
		<Control height="20"/>
		<HorizontalLayout height="160">
			<Label name="image_show" padding="100,0,0,0" width="160" height="160" bkimage="Rec_Finger_Add.png" align="center" />
		</HorizontalLayout>
        
		<Control height="20"/>
        <Label name="txt_show" text="Touch the fingerprint sensor" height="60" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="center" valign="center" />
		<Text name="text_2" text="Repeatedly lift and rest your finger on the sensor until setup is complete." height="60" padding="10,0,0,0" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="left" valign="center" />
    </VerticalLayout>
</Window>