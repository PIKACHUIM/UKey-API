<?xml version="1.0" encoding="UTF-8"?>
<Window size="350,300" mininfo="350,300" maxinfo="350,300" caption="0,0,0,40" sizebox="4,4,4,4"> <!-- 窗口的初始尺寸(宽800，高600)、窗口的最小尺寸(宽600，高400)、标题栏拖拽区域(高32)、可拖拽边框大小(这里添加sizebox后就可以拖拽边框调整大小了) -->
    <Font name="微软雅黑" size="14" bold="false" italic="false" default="true" />
	<Font name="Times New Roman" size="13" bold="false" italic="false"/>
    <VerticalLayout  bkcolor="#FFFFFFFF" bkcolor2="#FFFFFFFF" bordercolor="#FF1883D7" bordersize="1"> <!-- 整个窗口的背景色 -->
    	<HorizontalLayout height="40" bkcolor="#FFFFFFFF" bordercolor="#FF1883D7" padding="1,1,1,1">
			<Label text="Set PIN" width="200" height="40" padding="10,0,0,0" valign="center" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA"/>
			<Control width="90" />
			<Button name="closebtn" tooltip="Close" width="48" height="32" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="center" normalimage=" file=&apos;Close_Active.png&apos; " hotimage=" file=&apos;Close_MouseOver.png&apos; " pushedimage=" file=&apos;Close_Click.png&apos; " />
        </HorizontalLayout>
        
		<Label name="txt_info" text="Set PIN for BioPass FIDO2" height="40" padding="20,0,0,0" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" valign="center" />
		
        <HorizontalLayout height="48" padding="0,10,0,0">
			<Label width="48" height="48" padding="30,0,0,0" bkimage=" file=&apos;PIN_Button.png&apos; "/>
			<Edit name="edit_pin" width="200" height="30" padding="10,10,0,0" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" focusbordercolor="#FF0078D7" bordersize="1" valign="center" tooltip="New PIN" password="true"/>
        </HorizontalLayout>
		<Label name="label_pin" height="20" textcolor="#FFFF0000" align="center" valign="top"/>
		<Control height="2"/>
        <HorizontalLayout height="30">
            <Label width="48" padding="30,0,0,0"/>
            <Edit name="edit_pin2" width="200" height="30" padding="10,0,0,0" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" focusbordercolor="#FF0078D7" bordersize="1" valign="center" tooltip="Confirm PIN" password="true"/>
        </HorizontalLayout>	
		<Label name="label_pin2" height="30" textcolor="#FFFF0000"  align="center" valign="center"/>

        <HorizontalLayout height="30" padding="165,10,0,0">
        	<Button name="btn_ok" text="OK" width="120" height="30" bkcolor="#FFCCCCCC" textcolor="#FF000000" disabledtextcolor="#FFA7A6AA" align="center" bordersize="0" bordercolor="#FFD7D7D7" focusbordercolor="#FF0078D7"/>
        </HorizontalLayout>        
    </VerticalLayout>
</Window>